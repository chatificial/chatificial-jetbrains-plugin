<idea-plugin>
    <id>io.github.chatificial</id>

    <name>Chatificial</name>

    <vendor url="https://github.com/chatificial">Chatificial</vendor>

    <description><![CDATA[
        The bridge between people and AI â€” built for developers who collaborate with AI, not delegate to it.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.ChatificialBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="chatificial.notification"
                key="notificationGroup.chatificial.displayName"
                displayType="BALLOON"
        />
        <applicationConfigurable
                id="chatificial.settings"
                key="settings.chatificial.displayName"
                instance="io.github.chatificial.settings.ChatificialSettingsConfigurable"
        />
    </extensions>

    <actions>
        <group
                id="chatificial.projectViewPopupMenu"
                popup="true"
                icon="/icons/chatificial.svg"
        >
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <action
                    id="chatificial.copyFileContent"
                    class="io.github.chatificial.actions.CopyFileContentAction"
            />
        </group>
    </actions>
</idea-plugin>
